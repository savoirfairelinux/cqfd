_cqfd() {
	local cur prev words cword
	_init_completion || return

	case $prev in
	-C|-d|-f)
		_filedir
		return
		;;
	-b)
		local flavors cqfdrc=.cqfdrc
		# before we scan for flavors, see if a cqfdrc name was
		# specified with -f
		for (( i=0; i < ${#words[@]}; i++ )); do
			if [[ ${words[i]} == -f ]]; then
				# eval for tilde expansion
				eval cqfdrc=( "${words[i+1]}" )
			fi
		done

		if [ -e "$cqfdrc" ]; then
			flavors=$(cqfd -f $cqfdrc flavors)
			COMPREPLY=( $(compgen -W "$flavors" -- "$cur") )
		fi
		return
		;;
	init|flavors|release|help)
		return
		;;
	esac

	local arg=
	_get_first_arg
	if [[ "$arg" == run ]]; then
		for (( i=1; i <= cword; i++ )); do
			if [[ ${words[i]} == run ]]; then
				_command_offset $((i + 1))
				return
			fi
		done

		COMPREPLY=( $(compgen -c "$cur") )
		return
	fi

	local opts="-C -d -f -b -q -V --version -h --help"
	if [[ "$cur" == -* ]]; then
		COMPREPLY=( $(compgen -W "$opts" -- "$cur") )
		return
	fi

	local cmds="init flavors run release version help"
	COMPREPLY=( $(compgen -W "$cmds $opts" -- "$cur") )
} &&
complete -F _cqfd cqfd
