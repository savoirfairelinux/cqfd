[project]
org='savoirfairelinux'
name='cqfd'

[build]
command='make doc'
files='CHANGELOG.md \
       AUTHORS \
       LICENSE \
       README.md \
       samples/Dockerfile.trusty.nodejs5x \
       samples/dot-cqfdrc \
       samples/Dockerfile.trusty.android23 \
       cqfdrc.5.gz \
       cqfd.1.gz \
       cqfd'

[deb]
distro='deb'
docker_run_args="--volume $HOME:$HOME"
command='sh make-deb.sh'

[rpm]
distro='rpm'
docker_run_args="--volume $PWD/rpmbuild:$HOME/rpmbuild --volume $PWD/cqfd.spec:$HOME/rpmbuild/SPECS/cqfd.spec"
command='sh make-rpm.sh'
