#!/usr/bin/env bash
#
# validate the behavior with skelton bring up

. "$(dirname "$0")"/jtest.inc "$1"
mkdir -p "$TDIR/.cqfd/docker"
cp -a ../cqfd "$TDIR/.cqfd/"
cp -a test_data/. "$TDIR/."
cqfd="$TDIR/.cqfd/cqfd"

cd "$TDIR/" || exit 1

################################################################################
# running 'cqfd ls' without a proper config and empty cache should pass
################################################################################
jtest_prepare "cqfd ls runs without an .cqfdrc and with an empty cache"
if "$cqfd" ls; then
	jtest_result pass
else
	jtest_result fail
fi

################################################################################
# running 'cqfd gc' without a proper config and empty cache should pass
################################################################################
jtest_prepare "cqfd gc runs without an .cqfdrc and with an empty cache"
if "$cqfd" gc; then
	jtest_result pass
else
	jtest_result fail
fi

################################################################################
# running 'cqfd init' should fail, as there's no proper config
################################################################################
jtest_prepare "create a test skeleton in temporary directory"
if ! "$cqfd" init; then
	jtest_result pass
else
	jtest_result fail
fi

################################################################################
# running 'cqfd init' should fail, as there's an empty config
################################################################################
jtest_prepare "cqfd init complains with an empty .cqfdrc"
touch "$TDIR/.cqfdrc"
if ! "$cqfd" init; then
	jtest_result pass
else
	jtest_result fail
fi

################################################################################
# running 'cqfd init' should fail, as there's an incomplete config
################################################################################
jtest_prepare "cqfd init complains with an incomplete .cqfdrc"
echo '[project]' >"$TDIR/.cqfdrc"
if ! "$cqfd" init; then
	jtest_result pass
else
	jtest_result fail
fi

################################################################################
# finally, for setup, insert a proper testing .cqfdrc
################################################################################
cat "$TDIR/cqfdrc-test" >"$TDIR/.cqfdrc"
